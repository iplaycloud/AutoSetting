<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/setting_title_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/top_bar_title_margin_left"
            android:text="设置"
            android:textColor="@color/setting_item_title_color"
            android:textSize="34sp" />

        <LinearLayout
            android:id="@+id/layoutDate"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextClock
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="MM月dd日"
                android:format24Hour="MM月dd日"
                android:textColor="#8b8e8f"
                android:textSize="15sp" />

            <TextClock
                android:id="@+id/textWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="EEEE"
                android:format24Hour="EEEE"
                android:textColor="#8b8e8f"
                android:textSize="15sp" />
        </LinearLayout>

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/layoutDate"
            android:format12Hour="HH:mm"
            android:format24Hour="HH:mm"
            android:textColor="#ffffff"
            android:textSize="45sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/itemDisplay"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_display" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_display"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator" />

            <RelativeLayout
                android:id="@+id/itemSound"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_sound" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_sound"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator" />

            <RelativeLayout
                android:id="@+id/layoutRippleWifi"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_wifi" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_wifi"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />

                <Switch
                    android:id="@+id/switchWifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/item_switch_margin_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator" />

            <RelativeLayout
                android:id="@+id/layoutWifiAp"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_wifi_ap" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_wifi_ap"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator" />

            <RelativeLayout
                android:id="@+id/layoutRippleTraffic"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_datausage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_traffic_status"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator" />

            <RelativeLayout
                android:id="@+id/layoutApnSetting"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_apn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_apn"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator" />

            <RelativeLayout
                android:id="@+id/layoutGravity"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_crash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_crash"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator" />

            <RelativeLayout
                android:id="@+id/layoutRippleParking"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_park_monitor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_park_monitor"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />

                <Switch
                    android:id="@+id/switchParking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/item_switch_margin_right" />
            </RelativeLayout>



            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/layoutRippleStorage"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_usb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="存储设置"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/layoutRippleUsb"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_usb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_usb"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/itemDate"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_date" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_date_time"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator" />

            <RelativeLayout
                android:id="@+id/layoutRippleReset"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_reset" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_reset"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator" />

            <RelativeLayout
                android:id="@+id/layoutOTA"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_ota" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_ota"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_separator_height"
                android:layout_marginLeft="@dimen/item_separator_margin"
                android:layout_marginRight="@dimen/item_separator_margin"
                android:background="@color/setting_item_separator" />

            <RelativeLayout
                android:id="@+id/itemAbout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height"
                android:background="@color/setting_item_bg"
                android:clickable="true"
                android:visibility="visible" >

                <ImageView
                    android:layout_width="@dimen/item_icon_length"
                    android:layout_height="@dimen/item_icon_length"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_icon_margin_left"
                    android:src="@drawable/icon_about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_title_margin_left"
                    android:text="@string/title_about"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/item_title_text_size" />
            </RelativeLayout>
            

            <Switch
                android:id="@+id/switchFM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textOff="FM关闭"
                android:textOn="FM开启" />

            <Switch
                android:id="@+id/switchUVC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textOff="USB模式"
                android:textOn="UVC模式" />

            <EditText
                android:id="@+id/textInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入音频通道" />

            <Button
                android:id="@+id/btnSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textInput"
                android:text="设置" />

            <TextView
                android:id="@+id/textHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSet"
                android:text="@string/text_hint" />

            <Button
                android:id="@+id/btnQuickSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Setting" />

            <Button
                android:id="@+id/itemSystemSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统设置" />

            <Button
                android:id="@+id/itemDeviceTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工厂测试" />

            <Button
                android:id="@+id/itemEngineerMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工程模式" />

            <Button
                android:id="@+id/itemApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用" />

            <Button
                android:id="@+id/itemDataUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="流量使用情况" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
